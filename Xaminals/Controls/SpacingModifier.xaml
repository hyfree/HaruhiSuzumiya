<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="HaruhiSuzumiya.APP.Controls.SpacingModifier"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
        <Label Text="Spacing:" VerticalTextAlignment="Center" />
        <Entry
            x:Name="entry"
            Text="0"
            WidthRequest="100" />
        <Button Clicked="OnUpdateButtonClicked" Text="Update" />
    </StackLayout>
</ContentView>
